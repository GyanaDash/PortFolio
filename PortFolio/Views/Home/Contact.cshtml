
@{
    ViewData["Title"] = "Contact";
}

<div id="contact">
    <div class="container">
        <div class="row">
            <div class="contact-left">
                <h1 class="sub-title">Contact Me</h1>
                <p><i class="fa fa-paper-plane" aria-hidden="true"></i>gyanadash111@hotmail.com</p>
                <p><i class="fa fa-phone-square" aria-hidden="true"></i>+91-9861598214</p>
                <div class="social-icons">
                    <a href="https://www.instagram.com/gyan_dashh/"><i class="fab fa-2x fa-instagram"></i></a>
                    <a href="https://twitter.com/dashmunu"><i class="fab fa-2x fa-twitter"></i></a>
                    <a href="https://www.linkedin.com/in/gyandash94/"><i class="fab fa-2x fa-linkedin"></i></a>
                    <a href="https://github.com/GyanaDash?tab=repositories"><i class="fab fa-2x fa-github"></i></a>
                </div>
                <button class="btn btn_cv" runat="server" OnClick=""><strong>Download CV</strong></button>
            </div>
            <div class="contact-right">
                <form>
                    <input type="text" name="Name" placeholder="Your Name" required />
                    <input type="email" name="email" placeholder="Your Email" required />
                    <textarea name="message" rows="6" placeholder="Your Message"></textarea>
                    <button class="btn btn_cv" runat="server" OnClick=""><strong>Submit</strong></button>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    .sub-title 
    {
        font-size: 60px;
        font-weight: 600;
        color: black;
        margin-top: 28%;
    }
    .contact-left
    {
        flex-basis:35%;
        
    }

    .contact-right 
    {
        flex-basis: 60%;
    }

    .contact-left p
    {
        margin-top:30px;
        font-weight:700;
    }

    .contact-left p i
    {
            color: #ff004f;
            text-decoration: none;
            font-size: 20px;
            margin-right: 15px;
            display: inline-block;
    }

    .social-icons 
    {
        margin-top:30px;
    }

    .social-icons a
    {
        color:#ababab;
        text-decoration:none;
        font-size:20px;
        margin-right:15px;
        display:inline-block;
        transition:transform 0.5s;
    }

     .social-icons a:hover
     {
         color:#ff004f;
         transform: translateY(-5px);
     }
     .btn.btn_cv
     {
         display:inline-block;
        background-color: #ff004f;
         margin-top:20px;
     }

    .contact-right form
    {
        width:100%;
        margin-top:50px;
    }
    form input, form textarea
    {
        width:100%;
        border:0;
        outline:none;
        background: #E3DFE2;
        padding:15px;
        margin:15px 0;
        color:#fff;
        font-size:18px;
        border-radius:6px;
    }
    </style>
